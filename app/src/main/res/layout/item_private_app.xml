<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivPrivateAppIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/app_icon_description"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPrivateAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/tvPrivateAppPackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvPrivateBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_profile_badge"
                android:textSize="10sp"
                android:textColor="@color/private_profile_badge"
                android:background="@drawable/private_profile_badge_bg"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnCreateShortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_shortcut"
            android:textSize="14sp"
            style="?attr/materialButtonOutlinedStyle" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
